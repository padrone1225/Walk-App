body 
	background #f7fbfb
	color #182020

/*
	Main Header
*/

//**** variables ****//

$blue-white = #f7f7f7
$blue-pale = #e1e7ea
$button-yellow = #fbd20a
$accent-color = #5ec2ba

//********************


li 
	list-style none
	text-align center
	color black

a 
	color black
	text-decoration none

ul,
h1,
h2,
h3 
	margin 0
	padding 0

header 
	background #28303d


h1
	padding 15px
	text-align center
	color white
	letter-spacing 2px
	font-size 1.4em

.wrapper 
	max-width 800px
	margin 0 auto
	margin-top 30px

.button 
	background white
	width 200px
	padding 10px 15px
	text-align center
	border none
	&--next
		background $button-yellow
	&--active
		background $button-yellow
		width 200px
		padding 10px 15px
		text-align center
	&--submit
		height 46px
		width 100%
		color white

.wrapper
	max-width 690px
	margin 0 auto

.dashboard
	margin-top 20px
	background $blue-pale
	padding 50px

.appointment
	background $blue-pale
	margin 30px 0 40px 0
	h2 
		color white
		padding 20px
	&__schedule
		display flex
		justify-content center
		align-items center
		border-top 2px solid white
		ul
			display flex
			width 77%
			padding 14px 10px
			border-left 2px solid white
		ul li 
			margin 0 4px
			padding 14px 10px
			background $accent-color
			width 80px
			&:hover
				cursor pointer
			a 
				color white
		h3 
			width 20%
			margin 0 auto
			text-align center
				

form
	display flex 
	justify-content space-around
	.form--option
		flex-basis 50%
		max-width 275px
	p
		margin 12px 0 6px 0
		color white
		
	label
		background $blue-white
		padding 0 0 0 64px 
		position relative
		width 100%
		display inline-block
		margin-bottom 20px
		height 50px
		input
			height 100%
			width 100%
			outline none
			border 0
			background $blue-white
		&:after 
			content ""
			width 3px 
			height 100%
			background $blue-pale
			position absolute
			left 50px
			top 0
	select,
	textarea
		display block
		&:hover
			cursor pointer
	select 
		border 0
		outline 0
		width 100%
		height 100%
		-webkit-appearance none
		-webkit-border-radius 0px
	textarea
		height 150px
		width 100%
		border 0
		border 3px solid white
		background none
	svg 
		width 26px
		position absolute
		left 13px
		top 13px
	.fa
		font-size 26px
		position absolute
		left 12px
		top 12px
