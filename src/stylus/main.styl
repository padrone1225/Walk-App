/*
	Main Header
*/


//*************************************//
		//variables//
//************************************//

$blue-white = #f7f7f7
$blue-pale = #e1e7ea
$blue-dark-l = #c8d6dd
$button-yellow = #fbd20a
$accent-color = #71d2d4
$red = #f04e59
$black = #454648

$font-lato = 'Lato', sans-serif;
$font-playfair = 'Playfair Display', serif;
$font-size-sm = 1.7rem
$font-weight-thin = 300
$playfair-thin = 400



//*************************************//
		//Base Element Styles//
//************************************//

html
	font-size 64.5%

body 
	background $blue-white
	color #182020
	font-family $font-lato
	font-size $font-size-sm
	font-weight $font-weight-thin
	letter-spacing 1.3px
	position relative
	

li 
	list-style none
	text-align center
	color black

a 
	color black
	text-decoration none

ul,
h1,
h2,
h3 
	margin 0
	padding 0
	font-family $font-lato

header 
	background-color: rgba(255,255,255,0.99);
	border-bottom: 1px solid rgba(0,0,0,0.07);
	box-shadow: 0px 3px 8px -4px rgba(0,0,0,0.15);
	padding 8px 25px

.mainHeader__block.wrapper
	display flex
	justify-content space-between
	align-items center
.mainHeader__cta
	display flex
	align-items center
	a 
		margin-left 15px

button 
	border none
	background $button-yellow
	color white
	padding 10px 31px

input 
	border-radius 4px

h1
	padding 15px
	text-align center
	color white
	letter-spacing 2px
	font-family: 'Raleway', sans-serif;
	color $accent-color
	font-weight 300
	font-size 1.5rem
	position relative
	z-index 0
	&:before 
		content ""
		border 2px solid $accent-color
		width 35px
		height 35px
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		z-index -1
		border-radius 50%

h2 
	font-family $font-playfair
	font-size 3rem
	font-style italic
	font-weight $playfair-thin

h4 
	margin 0
	color grey

h3.subheading 
	margin-bottom 20px
	width 100%
	font-weight 600

.config__wrapper
	h2
		padding 26px 0 20px 0
		border-bottom 2px solid $accent-color
		margin-bottom 43px
		color $accent-color

.wrapper 
	max-width 880px
	margin 0 auto
	// margin-top 30px

//*************************************//
		//Button Styles//
//************************************//

.button 
	background white
	width 210px
	padding 10px 15px
	text-align center
	border none
	font-weight $font-weight-thin
	transition all 0.3s
	&--next
		background $button-yellow
		float right
		margin-bottom 40px
		font-weight 600
		color white
	&--active
		background $button-yellow
		width 200px
		padding 10px 15px
		text-align center
	&--submit
		height 46px
		width 100%
		color white
		background $accent-color
		// background $button-yellow
		font-weight 700
		margin-top 20px
	&--remove
		background #f04e59
		width auto
		color white
		margin-top 20px
	&--add
		background pink
	&--round
		background $accent-color
		border 1px solid $accent-color
		padding: 9px 13px;
		border-radius: 17px;
		font-size 1.3rem
		transition all 0.3s
		color white
		&:hover
			background darken($accent-color, 15)
			border 1px solid $accent-color
			cursor pointer
	&--round-createAcc
		background none
		color $accent-color
		&:hover
			background $accent-color
			border 1px solid $accent-color
			color white
			cursor pointer
.remove 
	background $red
.fa-minus
	color $red
.fa-plus
	color $accent-color

input:focus
	outline none
	border 2px solid $accent-color

//*************************************//
		//Dashboard Styles//
//************************************//

.form__container
	position absolute
	left 0
	top 0
	bottom 0
	right 0
	height 330px
	background $accent-color
	&.hide 
		display none
	&.show 
		display block

.dashboard
	margin-top 60px
	background $blue-pale
	position relative
	padding: 83px 40px 111px;

	.fa-times
		position absolute
		right 20px
		top 20px
		font-size 2.5rem
		color $accent-color
		padding 12px

.appointment
	background $blue-pale
	margin 50px 0 40px 0
	border-radius: 7px;
	h2 
		color black
		padding 20px
	&__schedule
		display flex
		justify-content center
		align-items center
		border-top 2px solid white
		ul
			display flex
			width 77%
			padding 14px 10px
			border-left 2px solid white
			min-height 74px
			li 
				margin 0 4px
				padding 14px 10px
				background $accent-color
				width 80px
				&:hover
					cursor pointer
				a 
					color white
		h3 
			width 20%
			margin 0 auto
			text-align center

//*************************************//
		//Modal for the Dashboard
//************************************//

.modal
	background rgba(0,0,0,0.5)
	position fixed
	width 100%
	height 100%
	left 0
	top 0
	&--close
		display none
	&__box
		background white
		width 559px
		// width 500px
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		padding 20px
		font-size 20px
		.fa-times
			float right
			font-size 25px
			color grey
		h3 
			padding 5px 0
			color $accent-color
			span 
				color grey
				font-weight $font-weight-thin
				margin-left 8px
				

//*************************************//
		//Selection Styles//
//************************************//

.selection
	margin-bottom 21px
	display flex
	flex-wrap wrap
	justify-content space-between
	padding 30px
	background $blue-pale
	&__block
		width 32%
		display: flex;
		flex-direction: column;
		margin-bottom 16px
		-webkit-box-shadow: 0 3px 8px rgba(187, 187, 187, 0.3);
		justify-content space-between
		height 95px
	&__duo 
		display flex
		position relative
		&:nth-type(even)
			margin-bottom 0
		a 
			width 100%
		.button 
			width: auto
			padding 10px;
			position relative
		.button.addTime
			text-align center
		.fa
			margin-right 4px
			padding 14px 16px
			background white

//*************************************//
		//General Form Styles//
//************************************//

form
	.form--option
		flex-basis 200px
		flex-grow 1
		margin 0 12px
	.three--col 
		display flex
		width 100%
		justify-content space-between
		margin 0
		label
			width 40%
			&.sml--col
				width 28%
	p
		margin 12px 0 6px 0
		color white
		
	label
		background $blue-white
		padding 0 0 0 64px 
		position relative
		width 100%
		display inline-block
		margin-bottom 20px
		height 50px
		input
			height 100%
			width 100%
			outline none
			border 0
			background $blue-white
		&:after 
			content ""
			width 3px 
			height 100%
			background $blue-pale
			position absolute
			left 50px
			top 0
	select,
	textarea
		display block
		&:hover
			cursor pointer
	select 
		border 0
		outline 0
		width 100%
		height 100%
		-webkit-appearance none
		-webkit-border-radius 0px
	textarea
		height 150px
		width 100%
		border 0
		border 3px solid white
		background none
	svg 
		width 26px
		position absolute
		left 13px
		top 13px
	.fa-cogs,
	.fa-clock-o
		font-size 26px
		position absolute
		left 12px
		top 12px

form.selection__duo 
	width 100%
	margin-bottom 16px

.textInput
	padding 12px
	border none
	width 100%

//*************************************//
	//Sign In / Sign Out Styles//
//************************************//
	
.signIn__box
	max-width: 490px;
	margin: 0 auto;
	padding: 16px 44px 26px 44px
	position relative
	.signIn__box--buttons
		display flex
		justify-content space-between
	.signIn__box--social
		position relative
		p 
			color: #71d2d4;
			background: white;
			position: relative;
			z-index: 1;
			display: inline-block;
			left: 50%;
			top: 8px;
			width: 45px;
			text-align: center;
			transform: translateX(-50%);
		&:after
			content ""
			background #ebebeb
			position absolute
			top 30px
			left 0
			width 100%
			height 2px
			
	h2 
		text-align center
		// color $black
		color grey
		padding-bottom 5px
		position relative
		margin-bottom 25px
	input 
		padding: 10px;
		width: 100%;
		border: none;
		margin: 10px 0;
		font-weight: 300;
		border 2px solid rgb(235, 235, 235)
	.button--login
		background $accent-color
		bottom 0
		left 0
		width 48%
		margin-top 10px
		border none
		color white
		&:hover
			background darken($accent-color, 15)
			
	.button--submit-bare
		width 48%
		background none
		border 2px solid $accent-color
		color $accent-color
		&:hover
			background $accent-color
			color white
	.button--google 
		background #d23f31
		border none
		color white
		margin-top: 29px
	.button--facebook
		background #3b5998
		color white
	
.timesGrid
	width 100%
	min-height 100px
	display flex
	justify-content flex-start
	align-items flex-start
	flex-wrap wrap
	&__single
		// padding 10px
		padding 13px 18px
		background $accent-color
		margin 0 10px 10px 0
		margin-right 10px
		color white
		&--inactive
			background #E6E7E8
			color grey

//*************************************//
		//Menu button styles//
//************************************//

.addAppointment
	width 60px
	height 60px
	background $button-yellow
	position fixed
	right 50px
	bottom 50px
	border-radius 50%
	display flex
	justify-content center
	align-items center
	box-shadow: 0 0 4px rgba(0,0,0,.14), 0 4px 8px rgba(0,0,0,.28);
	.fa-plus
		color white
		font-size 2.5rem
		transition all 0.3s
	&:hover
		.fa-plus
			transform rotate(45deg)

.menu__container
	position fixed
	right 78px
	bottom 120px
	.menu
		display flex
		flex-direction column
		justify-content flex-end
		width 21px
		transition all 0.5s
		li 
			margin-right 30px
			margin-top 11px
			transition all 0.3s
			&:hover 
				.fa 
					background #68b1b2
					cursor pointer
					
			.fa 
				background: $accent-color
				width: 37px
				height: 37px
				border-radius: 50%
				padding-top: 11px
				padding-left: 2px
				color white
				transition all 0.3s
.hide 
	opacity 0
	visibility hidden
.show 
	opacity 1
	visibility visible

//*************************************//
		//Welcome Section//
//************************************//
.welcome 
	background: $blue-pale;
	box-shadow: 5px 5px 8px -4px rgba(0,0,0,0.15);
	margin-top 40px
	.welcome--wrapper
		display flex
	.welcome--right
		width 50%
		padding 40px
		background-image url("/src/assets/coffee-shop.jpg");
		background-repeat no-repeat
		background-position: center right
		background-size: cover;
		position relative
		display flex 
		justify-content center
		align-items center
		text-align center
		flex-direction column
		h2 
			color white
		h1 
			font-size 3rem
			&:before
				width 65px
				height 65px
		&:before
			content ""
			background rgba(58,86,144,0.8)
			position absolute
			top 0
			left 0
			bottom 0
			right 0
			
	.welcome--left
		width 50%
		padding 7px
		background white
		p 
			color grey
			text-align center
			padding-bottom 10px
	h2
		font-size 4rem
		position relative
		z-index 1
		line-height 1.3
		margin-top 20px
		margin-bottom 0





